<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GroupFragment"
    android:orientation="vertical"
    android:padding="20dp"
    android:id="@+id/GroupPage">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Group Information"
        app:layout_constraintBottom_toTopOf="@+id/NoGroupinfo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_margin="5dp"
        />


    <androidx.cardview.widget.CardView
        android:id="@+id/Banner"
        android:layout_width="314dp"
        android:layout_height="53dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_marginBottom="28dp"
        app:cardBackgroundColor="@color/purple_700"
        app:cardCornerRadius="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.164"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:text="Create New Group"
            android:textColor="@color/white" />


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/NoGroupinfo"
        android:layout_width="match_parent"
        android:layout_height="531dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/GroupinformationList"
        app:layout_constraintTop_toTopOf="@+id/GroupinformationList"
        tools:layout_editor_absoluteX="20dp"
        android:gravity="center"/>
    <ListView

        android:id="@+id/GroupinformationList"
        android:layout_width="match_parent"
        android:layout_height="531dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="10.0sp"
        android:clickable="true"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:focusable="true" >


    </ListView>

    <ImageView
        android:id="@+id/refresh"
        android:layout_width="35dp"
        android:layout_height="37dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/refresh"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.384"
        app:layout_constraintStart_toEndOf="@+id/Banner" />


</androidx.constraintlayout.widget.ConstraintLayout>