<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GroupPage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".GroupFragment">


    <androidx.cardview.widget.CardView
        android:id="@+id/Banner"
        android:layout_width="314dp"
        android:layout_height="53dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="@color/purple_700"
        app:cardCornerRadius="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NoGroupinfo"
        app:layout_constraintVertical_bias="0.924">

        <TextView
            android:id="@+id/BannerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:text="Create New Group"
            android:textColor="@color/white" />


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/NoGroupinfo"
        android:layout_width="match_parent"
        android:layout_height="531dp"
        android:gravity="center"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/GroupinformationList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView

        android:id="@+id/GroupinformationList"
        android:layout_width="match_parent"
        android:layout_height="531dp"
        android:clickable="true"
        android:divider="@android:color/transparent"
        android:dividerHeight="10.0sp"

        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    </ListView>

    <ImageView
        android:id="@+id/refresh"
        android:layout_width="35dp"
        android:layout_height="37dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/refresh"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/Banner"
        app:layout_constraintTop_toTopOf="@+id/Banner"
        app:layout_constraintVertical_bias="0.231" />


</androidx.constraintlayout.widget.ConstraintLayout>